    <select id="findById" parameterType="int" resultMap="Member" >
       SELECT
	 tm.id,
	 tm.nickname,
	 tm.name,
	 tm.tel,
	 tm. PASSWORD,
	 tr.mid,
	 tr. NAME

     FROM
	t_member tm
    INNER JOIN t_order tr ON tm.id = tr.mid
    WHERE
	tm.id = #{id};

    </select>


    <resultMap id="Member" type="com.kaisheng.entity.Member" extends="baseMap">
        <collection property="memberList" ofType="com.kaisheng.entity.Order">
            <id column="mid" property="mid"/>
            <result column = "name" property="name"/>
        </collection>
    </resultMap>

    <resultMap id="baseMap" type="com.kaisheng.entity.Member">
        <id column="id" property="id"/>
        <result column="nickname" property="nickname"/>
        <result column="name" property="name"/>
        <result column="tel" property="tel"/>
        <result column="password" property="password"/>
    </resultMap>






