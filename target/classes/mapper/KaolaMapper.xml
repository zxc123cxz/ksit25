<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kaishengit.mapper.KaolaMapper">


   <select id="findById"  resultType="com.kaishengit.entity.Kaola">
          select * from kaola where id = #{id}
   </select>



    <select id="findAll" resultMap="kaolaList">
        SELECT
            kaola.*, kaola_type.type_name,
            kaola_type.parent_id
        FROM
            kaola
        LEFT JOIN kaola_type ON kaola.type_id = kaola_type.id
        ORDER BY kaola.id DESC
    </select>

    <select id="findTypeAll" resultMap="kaolaList">
         SELECT
            kaola.*, kaola_type.type_name,
            kaola_type.parent_id
        FROM
            kaola
        LEFT JOIN kaola_type ON kaola.type_id = kaola_type.id
        <where>
          <!--  <if test="productName != null and productName != '' ">
                kaola.product_name LIKE concat('%',#{productName},'%')
                /*kaola.product_name like concat('%',#{productName},'%')*/
            </if>-->
            <if test="productName != null and productName!= ''">
                kaola.product_name like concat('%',#{productName},'%')
            </if>
            <if test = "place !=null and place != ''">
               and kaola.place like #{place}
            </if>
            <if test="minPrice != null and minPrice != 0">
                and kaola.price >= #{minPrice}
            </if>
            <if test="maxPrice != null and maxPrice != 0">
                and kaola.price &lt;= #{maxPrice}
            </if>
            <if test="typeId != null and typeId != 0">
                and kaola_type.id = #{typeId}
            </if>
        </where>
        ORDER BY kaola.id DESC
    </select>
    <resultMap id="kaolaList" type="Kaola">
      <id column="id" property="id"/>
      <result column="product_name" property="productName"/>
        <result column="place" property="place"/>
        <result column="price" property="price"/>
        <result column="market_price" property="marketPrice"/>
        <result column="comment_num" property="commentNum"/>
        <result column="type_id" property="typeId"/>
        <association property="kaolaType" javaType="KaolaType">
            <result column="type_id" property="id"/>
            <result column="type_name" property="typeName"/>
            <result column="parent_id" property="parentId"/>
        </association>
    </resultMap>


    <delete id="Delete">
        DELETE  from kaola where id = #{id}
    </delete>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into kaola (product_name,price,market_price,place,comment_num,type_id)
        values (#{productName},#{price},#{marketPrice},#{place},#{commentNum},#{typeId})
    </insert>


    <update id="update" >
        update kaola SET  product_name=#{productName},price=#{price},market_price=#{marketPrice},place=#{place},comment_num=#{commentNum},type_id=#{typeId}
        where id = #{id}
    </update>

</mapper>